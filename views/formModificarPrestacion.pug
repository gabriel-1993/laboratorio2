extends indexAdmin 

block content 
  .divMsj 
    ul
    button.btn-Msj 
  section.flexCenter.section
    .divModificarPrestacion.center.column.blur
      h3.text-center.text-fondoAzul.borderRadiusTop5px Modificar Prestacion
      h4.text-center.text-fondoCeleste Datos Prestacion 
      .divFlexRow
        .divDatosPrestacion
          p Por favor ingrese una breve Descripcion del Estudio/Examen que desea Modificar. Utilizar lista de Descripciones para Seleccionar. 

          form(id="formModificarPrestacion" autocomplete="off")
            .divBuscarDescripcion 
              div
                label(for="descripcion" class="labelCenter") Descripcion
                input(type="text" id="descripcion" name="descripcion" autocomplete="off") 
                i.fa-solid.fa-magnifying-glass.btnBuscar
              ul(id="prestaciones-list" class="prestaciones-list listaFiltrada right-127px displayNone") <!-- Div para mostrar las coincidencias -->
            .divMasCampos.column.displayNone 
              div 
                label(for="estado" class="labelCenter") Estado
                select(type="text" id="selectEstado" name="estado" autocomplete="off") 
                  option(value="1") DISPONIBLE  
                  option(value="0") NO DISPONIBLE 
              .divLados 
                div
                  label(for="lado" class="labelCenter") Lado 
                  input(type="text" id="lado" name="lado" autocomplete="off" placeholder="opcional")
                ul(id="lados-list" class="lados-list listaFiltrada right-127px displayNone") <!-- Div para mostrar las coincidencias -->
              button(type="button" class="btnModificarLado width100") Asignar Lado

            .divLadosModificados.displayNone
              ul.ulLadosModificados
     
      button(type="button" class="btnModificarPrestacion displayNone") Modificar Prestacion
    script(src="/js/formModificarPrestacionCliente.js", type="module") // Incluye el archivo JavaScript del cliente